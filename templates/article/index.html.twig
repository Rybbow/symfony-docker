{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ article.title }}! ✅</h1>

    <div>
        {{ article.content }}
    </div>

    <ul>
        {% for comment in article.comments %}
            <li>{{ comment.value }} by {{ comment.email  }}
                <a href="{{ path('update_comment', {id:comment.id}) }}">Edytuj</a>
                <a href="{{ path('delete_comment', {id:comment.id}) }}">Usuń</a>
            </li>
        {% endfor %}
    </ul>
    <p>counter: {{ counter }}</p>
    <p><a href="{{ path('articles') }}">Articles</a></p>

    {{ article.title|stringLength }}

    {% if is_granted('COMMENT_ADD') %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit">
        {{ form_end(form) }}
    {% endif %}
</div>
{% endblock %}
