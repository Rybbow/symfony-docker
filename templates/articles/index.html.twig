{% extends 'base.html.twig' %}
{% import "/components/macros.html.twig" as macro %}
{% block title %}Hello ArticlesController!{% endblock %}



{% block body %}

<div class="example-wrapper">
    <h1>Hello! âœ…</h1>

    {{ form_start(filter_form, {'method': 'get'}) }}
    {{ form_row(filter_form) }}
    <input type="submit"/>
    {{ form_end(filter_form) }}

    <ul>
        {% for article in my_pager %}
            <li><a href="{{ path('article', {slug: article.slug }) }}">{{ article.title }} ({{ article.getAddDate().format('y-m-d H:i:s') }})</a> <a href="{{ path('update_article', {slug: article.slug}) }}">Zmien</a>
                {{ macro.short(article.content) }}</li>

        {% endfor %}
    </ul>

    <div class="pagerfanta">
        {{ pagerfanta(my_pager) }}
    </div>

    <p><a href="{{ path('about') }}">O nas</a></p>
</div>
{% endblock %}
